/* 顶部边距 */
.header,
.main-inner {
  margin-top: 10px;

  +mobile() {
    margin-top: 0;
  }
}

/* 文章卡片 */
.post-block {
  border-radius: $myradius !important;
}

/* 文章与页面标题 */
.posts-expand .post-title {
  font-size: 1.45em;
  font-weight: bold;

  +mobile() {
    margin-top: 10px;
  }
}

/* 文章标题 */
.index .post-title,
.post .post-title {
  text-align: left;
  border-left: $btn-default-bg 8px solid;
  padding-left: 10px;
}

/* 文章信息栏 */
.index .post-meta,
.post .post-meta {
  justify-content: left;
}

.posts-expand .post-header {
  margin-bottom: 30px;
}

.posts-expand .post-meta-container {
  /* 文字颜色 */
  color: var(--text-color);
  /* 时间下划线 */
  time {
    border-bottom: none;
  }
  /* 文章/页面描述 */
  .post-description {
    font-size: .95em;
  }
}